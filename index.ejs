<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Movie Recommendation System</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <div class="max-w-4xl mx-auto mt-10 bg-white p-8 rounded-lg shadow-md">
        <h1 class="text-2xl font-bold text-center mb-8">Movie Recommendation System</h1>

        <form action="/recommend" method="POST" class="flex justify-center gap-4 mb-8">
            <input 
                type="text" 
                name="movie" 
                placeholder="Enter a movie name..." 
                required 
                class="w-2/3 px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            >
            <button 
                type="submit" 
                class="px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition"
            >
                Recommend
            </button>
        </form>

        <% if (message) { %>
            <p class="text-red-600 text-center mb-4"><%= message %></p>
        <% } %>

        <% if (recommendations && recommendations.length > 0) { %>
            <div>
                <h2 class="text-xl font-semibold text-center mb-6">Top 5 Similar Movies:</h2>
                <div class="flex gap-6 overflow-x-auto pb-2 justify-center">
                    <% recommendations.forEach(function(rec) { %>
                        <div class="flex-shrink-0 w-32 text-center bg-gray-50 p-2 rounded-lg shadow">
                            <img 
                                src="<%= rec.poster %>" 
                                alt="Poster of <%= rec.title %>" 
                                class="w-full h-44 object-cover rounded"
                            >
                            <p class="mt-2 text-sm font-medium text-gray-800"><%= rec.title %></p>
                        </div>
                    <% }); %>
                </div>
            </div>
        <% } %>
    </div>
</body>
</html>
